#This is a password checker program
whileLoopVariable = False
def passwordChecker():
    Username = input("Please input your username: ")
    Password = input("Please input your password: ")

    PasswordLength = len(Password)
    print(('*' * PasswordLength))
    print(Username + " Your password is " + ('*' * PasswordLength) + " is " + str(PasswordLength) + " Characters long ")

